@model List<ExamQuestionViewModel>

@{
    ViewData["Title"] = "Exam";
}

<div class="container mt-4">

    
    <div class="card shadow mb-4">
        <div class="card-body text-center">
            <h2 class="mb-2">Exam</h2>
            <p class="text-muted mb-0">
                Total Questions: @Model.Count
            </p>
        </div>
    </div>

    <form asp-action="SubmitExam" asp-route-studentId="@Context.Request.Query["studentId"]"
          asp-route-examId="@Context.Request.Query["examId"]" method="post">

       

        @for (int i = 0; i < Model.Count; i++)
        {
            var q = Model[i];

            <input type="hidden"
                   name="answers[@i].QuestionId"
                   value="@q.QuestionId" />

            <div class="card mb-4 shadow-sm">
                <div class="card-body">

                    <!-- Question Title -->
                    <h5 class="badge bg-primary mb-2">
                        Question @(i + 1)
                    </h5>

                    <p class="fw-bold fs-5">
                        @q.QuesDescription
                    </p>

                    <!-- Options -->
                    @if (q.Options.Count > 0)
                    {
                        foreach (var opt in q.Options)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input"
                                       type="radio"
                                       name="answers[@i].AnswerText"
                                       value="@opt.OptionId" />

                                <label class="form-check-label">
                                    @opt.Text
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- True / False -->
                        <div class="form-check mb-2">
                            <input class="form-check-input"
                                   type="radio"
                                   name="answers[@i].AnswerText"
                                   value="1" />
                            <label class="form-check-label">
                                True
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   name="answers[@i].AnswerText"
                                   value="0" />
                            <label class="form-check-label">
                                False
                            </label>
                        </div>
                    }

                </div>
            </div>
        }

        <!-- Submit -->
        <div class="text-center mb-5">
            <button class="btn btn-success btn-lg px-5"
                    onclick="return confirm('Submit exam? You cannot change answers after submit.')">
                Submit Exam
            </button>
        </div>

    </form>

</div>
